    <TextView
        android:id="@+id/textView_read_board_click2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_read_board_writer"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="34dp"
        android:fontFamily="@font/nanum3"
        android:text="조회수"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView_read_board_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_read_board_writer"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/nanum3"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView_read_board_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_read_board_date"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/nanum2"
        android:scrollbars="vertical"
        android:text="여기는 내용라인입니다"
